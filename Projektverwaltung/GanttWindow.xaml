<Window x:Class="Projektverwaltung.GanttWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gantt-Diagramm" Width="900" Height="400"
        WindowStartupLocation="CenterOwner"
        Background="#F6F8FB">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Kopfzeile mit Titel + Export -->
        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Gantt-Diagramm"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <Button Content="Als Bild exportieren"
                    Margin="10,0,0,0"
                    Padding="10,4"
                    HorizontalAlignment="Right"
                    Click="Export_Click"
                    DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Scrollbarer Bereich mit Canvas -->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="White"
                      BorderBrush="#D7DEEA"
                      BorderThickness="1">
            <!-- WICHTIG: Name = CanvasChart -->
            <Canvas x:Name="CanvasChart"
                    Background="White" />
        </ScrollViewer>
    </Grid>
</Window>
