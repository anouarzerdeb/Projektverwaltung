<Window x:Class="Projektverwaltung.EmployeeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mitarbeiter"
        Width="560" Height="360"
        WindowStartupLocation="CenterOwner"
        Background="#F6F8FB">

    <!-- Styles copied from EmployeeWindow so the look is consistent -->
    <Window.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="ToolbarBg" Color="#EEF2F7"/>
        <SolidColorBrush x:Key="ToolbarHover" Color="#E2E8F2"/>
        <SolidColorBrush x:Key="ToolbarBorder" Color="#D7DEEA"/>

        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource ToolbarBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ToolbarBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ToolbarHover}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.55"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Glyph" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="14">
        <!-- Inhalt -->
        <Border Background="White" BorderBrush="#D7DEEA" BorderThickness="1" CornerRadius="8" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto" MinHeight="44.24"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Vorname*" Grid.Column="0" VerticalAlignment="Center" Height="16"/>
                <TextBox x:Name="TxtFirstName" Grid.Row="0" Grid.Column="1" Margin="6,6,6,6" />

                <TextBlock Text="Nachname*" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Height="16"/>
                <TextBox x:Name="TxtLastName" Grid.Row="1" Grid.Column="1" Margin="6,6,6,6" />

                <TextBlock Text="Abteilung" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Height="16"/>
                <TextBox x:Name="TxtDepartment" Grid.Row="2" Grid.Column="1" Margin="6,6,6,6" />

                <TextBlock Text="Telefon" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Height="16"/>
                <TextBox x:Name="TxtPhone" Grid.Row="3" Grid.Column="1" Margin="6,6,6,6" />

                <TextBlock Text="E-Mail" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Height="16"/>
                <TextBox x:Name="TxtEmail" Grid.Row="4" Grid.Column="1" Margin="6,6,6,6" />

                <!-- Button-Leiste (gleiches Design wie in EmployeeWindow) -->
                <StackPanel Grid.Row="6"
                            Orientation="Horizontal" HorizontalAlignment="Left" Margin="99,0,0,0" Grid.Column="1" Width="259">
                    <Button Style="{StaticResource ToolbarButton}" Width="120" Click="Cancel_Click" IsCancel="True">
                        <StackPanel Orientation="Horizontal">
                            <!-- close glyph -->
                            <TextBlock Style="{StaticResource Glyph}" Text="&#xE711;"/>
                            <TextBlock Text="Abbrechen" FontSize="16"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ToolbarButton}" Width="120" Click="SaveEmployee_Click" IsDefault="True">
                        <StackPanel Orientation="Horizontal">
                            <!-- save glyph -->
                            <TextBlock Style="{StaticResource Glyph}" Text="&#xE74E;"/>
                            <TextBlock Text="Speichern" FontSize="16"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </DockPanel>
</Window>
