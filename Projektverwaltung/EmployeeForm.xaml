<Window x:Class="Projektverwaltung.EmployeeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mitarbeiter" Width="520" Height="331"
        WindowStartupLocation="CenterOwner"
        Background="White">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 2 columns; spacing simulated via control Margins -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <StackPanel Grid.Column="0" Margin="0,0,12,12">
                <TextBlock Text="Vorname" FontWeight="Bold"/>
                <TextBox x:Name="TxtFirstName" Margin="0,6,0,0" Height="20"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="12,0,0,12">
                <TextBlock Text="Nachname" FontWeight="Bold"/>
                <TextBox x:Name="TxtLastName" Margin="0,6,0,0" Height="20"/>
            </StackPanel>

            <!-- Row 1 -->
            <StackPanel Grid.Column="0" Margin="0,12,12,12" Grid.Row="1">
                <TextBlock Text="Abteilung" FontWeight="Bold"/>
                <TextBox x:Name="TxtDepartment" Margin="0,6,0,0" Height="20"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="12,12,0,12" Grid.Row="1">
                <TextBlock Text="Telefon" FontWeight="Bold"/>
                <TextBox x:Name="TxtPhone" Margin="0,6,0,0" Height="20"/>
            </StackPanel>

            <!-- Row 2 (full width) -->
            <StackPanel Grid.ColumnSpan="2" Margin="0,12,0,0" Grid.Row="2">
                <TextBlock Text="E-Mail" FontWeight="Bold"/>
                <TextBox x:Name="TxtEmail" Margin="0,6,0,0" Height="20"/>
            </StackPanel>

            <!-- Define rows explicitly (needed because we use Grid.Row above) -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Abbrechen" Width="100" Height="32" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Speichern"  Width="100" Height="32" Click="SaveEmployee_Click"/>
        </StackPanel>
    </Grid>
</Window>
