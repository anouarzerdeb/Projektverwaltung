<Window x:Class="Projektverwaltung.EmployeeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mitarbeiter" Width="400" Height="300">
	<Grid>
		<!-- Employee Fields -->
		<TextBlock Text="Vorname" Margin="10,10,10,0"/>
		<TextBox Name="TxtFirstName" Margin="10,30,10,0"/>

		<TextBlock Text="Nachname" Margin="10,70,10,0"/>
		<TextBox Name="TxtLastName" Margin="10,90,10,0"/>

		<TextBlock Text="Abteilung" Margin="10,130,10,0"/>
		<TextBox Name="TxtDepartment" Margin="10,150,10,0"/>

		<TextBlock Text="Telefon" Margin="10,190,10,0"/>
		<TextBox Name="TxtPhone" Margin="10,210,10,0"/>

		<!-- Save and Cancel Buttons -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
			<Button Content="Speichern" Width="80" Click="SaveEmployee_Click"/>
			<Button Content="Abbrechen" Width="80" Click="Cancel_Click" Margin="10,0"/>
		</StackPanel>
	</Grid>
</Window>
