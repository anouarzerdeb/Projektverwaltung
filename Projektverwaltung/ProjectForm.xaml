<Window x:Class="Projektverwaltung.ProjectForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projekt bearbeiten" Width="400" Height="350">
    <Grid>
        <!-- Project Name -->
        <TextBlock Text="Projektbezeichnung" Margin="10,10,10,0"/>
        <TextBox Name="TxtName" Margin="10,30,10,0"/>

        <!-- Start Date -->
        <TextBlock Text="Startdatum" Margin="10,70,10,0"/>
        <DatePicker Name="TxtStartDate" Margin="10,90,10,0"/>

        <!-- End Date -->
        <TextBlock Text="Enddatum" Margin="10,130,10,0"/>
        <DatePicker Name="TxtEndDate" Margin="10,150,10,0"/>

        <!-- Project Owner (Employee) -->
        <TextBlock Text="Verantwortlicher" Margin="10,190,10,0"/>
        <ComboBox Name="CmbOwner" Margin="10,210,10,0" DisplayMemberPath="LastName" SelectedValuePath="EmployeeId"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Speichern" Width="80" Click="SaveProject_Click"/>
            <Button Content="Abbrechen" Width="80" Click="Cancel_Click" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
