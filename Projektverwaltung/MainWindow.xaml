<Window x:Class="Projektverwaltung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projektverwaltung • Version 1.0"
        Width="560" Height="320"
        WindowStartupLocation="CenterScreen"
        Background="#F6F8FB">

    <!-- Local styles for this window -->
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2D6AE3"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#1F56C2"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00C2A8"/>
        <SolidColorBrush x:Key="CardBrush" Color="White"/>
        <SolidColorBrush x:Key="TextBrush" Color="#1A1A1A"/>


        <Style x:Key="Glyph" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PrimaryIconButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource CardBrush}"  Padding="28" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" Margin="0,0,0,14">
                    <TextBlock Text="Willkommen" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Bitte wählen Sie einen Bereich" Foreground="#555" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Style="{StaticResource PrimaryIconButton}" Click="BtnProjects_Click" Height="60" Width="190">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource Glyph}"  Text="&#xE7C3;"/>
                            <TextBlock Text="Projekte" FontSize="18"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource PrimaryIconButton}" Background="{StaticResource AccentBrush}" Click="BtnEmployees_Click" Height="60" Width="190">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource Glyph}" Text="&#xE77B;"/>
                            <TextBlock Text="Mitarbeiter" FontSize="18"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
