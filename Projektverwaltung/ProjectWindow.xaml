<Window x:Class="Projektverwaltung.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projektliste" Width="800" Height="600">
	<Grid>
		<!-- Project DataGrid -->
		<DataGrid Name="GridProjects" AutoGenerateColumns="False" Margin="10,50,10,10" SelectionMode="Single" CanUserAddRows="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Projektbezeichnung" Binding="{Binding Name}" Width="250"/>
				<DataGridTextColumn Header="Startdatum" Binding="{Binding StartDate}" Width="100"/>
				<DataGridTextColumn Header="Enddatum" Binding="{Binding EndDate}" Width="100"/>
				<DataGridTextColumn Header="Verantwortlicher" Binding="{Binding OwnerEmployee.FirstName}" Width="150"/>
			</DataGrid.Columns>
		</DataGrid>

		<!-- Buttons for Project Actions -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
			<Button Content="Neu" Width="80" Click="NewProject_Click"/>
			<Button Content="Ändern" Width="80" Click="EditProject_Click" Margin="10,0"/>
			<Button Content="Löschen" Width="80" Click="DeleteProject_Click"/>
			<Button Content="Gantt-Diagramm" Width="120" Click="ShowGantt_Click" Margin="10,0"/>
		</StackPanel>
	</Grid>
</Window>
