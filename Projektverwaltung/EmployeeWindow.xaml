<Window x:Class="Projektverwaltung.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mitarbeiter"
        Width="950" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#F6F8FB">

    <!-- Local styles for this window -->
    <Window.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="ToolbarBg" Color="#EEF2F7"/>
        <SolidColorBrush x:Key="ToolbarHover" Color="#E2E8F2"/>
        <SolidColorBrush x:Key="ToolbarBorder" Color="#D7DEEA"/>

        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource ToolbarBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ToolbarBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ToolbarHover}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.55"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Glyph" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="14">
        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10" Height="50">
            <Button Style="{StaticResource ToolbarButton}" Click="NewEmployee_Click" Width="120">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource Glyph}" Text="&#xE710;"/>
                    <TextBlock Text="Neu" FontSize="18"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource ToolbarButton}" Click="EditEmployee_Click" Name="BtnEdit" IsEnabled="False" Width="120">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource Glyph}" Text="&#xE70F;"/>
                    <TextBlock Text="Ändern" FontSize="18"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource ToolbarButton}" Click="DeleteEmployee_Click" Name="BtnDelete" IsEnabled="False"  Width="120">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource Glyph}" Text="&#xE74D;"/>
                    <TextBlock Text="Löschen" FontSize="18"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="GridEmployees"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              SelectionMode="Single"
              SelectionChanged="GridEmployees_SelectionChanged"
              MouseDoubleClick="GridEmployees_MouseDoubleClick"
              Background="White"
              BorderBrush="#D7DEEA"
              RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nachname" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Vorname"  Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Abteilung" Binding="{Binding Department}" Width="*"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="E-Mail" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
